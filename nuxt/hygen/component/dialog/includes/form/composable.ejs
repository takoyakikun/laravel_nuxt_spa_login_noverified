import { reactive } from '@nuxtjs/composition-api'

export default () => {
  const state = reactive({
    value: false,
    formValue: {},
    validate: {}
  })

  // ダイアログを開く
  const openDialog = () => {
    state.formValue = {}
    state.validate.reset()
    state.value = true
  }

  // ダイアログを閉じる
  const closeDialog = () => {
    state.value = false
  }

  return { state, openDialog, closeDialog }
}
